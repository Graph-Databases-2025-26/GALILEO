# ======================================
# üåê App configuration
# ======================================
APP_NAME=galileo_proj
APP_ENV=development

# ======================================
# üóÑÔ∏è Database (DuckDB multi-dataset)
# ======================================
# Cartella dove si trovano tutti i file .duckdb
DUCKDB_DIR=./data/

# ======================================
# ü§ñ AI Provider (scegline uno o pi√π)
# ======================================
GALOIS_API_KEY=your_galois_api_key
GALOIS_ENDPOINT=https://api.galois.ai/v1/query

AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

WATSONX_API_KEY=your_ibm_watsonx_api_key
WATSONX_PROJECT_ID=your_project_id
WATSONX_ENDPOINT=https://api.ibm.com/watsonx/ai

# ======================================
# üß† Query / Retrieval settings
# ======================================
MAX_RESULTS=10
PRIMARY_MODEL=galois-llm-v2
QUERY_MODE=api

# ======================================
# üß± Logging e File system
# ======================================
LOG_LEVEL=INFO
LOG_PATH=./logs/app.log
CACHE_DIR=./cache

# ======================================
# üß© Miscellaneous
# ======================================
TEMP_DIR=./tmp
ENABLE_PROFILING=false
